<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/login_fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        tools:ignore="ScrollViewSize">


    </RelativeLayout>
    </ScrollView>

    <EditText
        android:id="@+id/etUserLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPassLogin"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:elevation="5dp"
        android:ems="10"
        android:hint="Nombre de usuario"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="10dp"
        android:textAlignment="center"
        tools:ignore="ObsoleteLayoutParam" />

    <EditText
        android:id="@+id/etPassLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"

        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="2dp"
        android:elevation="5dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="17dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VesiÃ³n: 0.1.1"
        android:id="@+id/tvVersion"
        android:textColor="#606060"
        android:layout_gravity="center_vertical|bottom"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powered by: LinksDominicana"
        android:id="@+id/textView"
        android:textColor="#606060"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/btnLogin"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassLogin"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/round_bottom"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:foreground="#ff5500"
        android:foregroundGravity="fill_vertical"
        android:onClick="onButtonClick"
        android:text="Iniciar"
        android:textStyle="bold"
        tools:ignore="HardcodedText,KeyboardInaccessibleWidget,UnusedAttribute" />

    <ProgressBar
        android:id="@+id/pbHeaderProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvVersion"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:textAlignment="center"></ProgressBar>

   <!-- <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView2"
    android:background="@drawable/logo_login4"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
        android:layout_above="@+id/etUserLogin"
        android:layout_centerHorizontal="true" />-->


</RelativeLayout>
