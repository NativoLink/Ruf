<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2E4FB">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paciente"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/NombrePaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="NOMBRE O ID"
            android:textAlignment="center"
            tools:ignore="HardcodedText"
            android:inputType="" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buscar"
            android:background="#3caee2"
            tools:ignore="HardcodedText" />


    </TableRow>

    <TableRow
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="17dp"
            android:layout_height="54dp"
            android:layout_weight=".3"
            android:text="Monto a Pagar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textIsSelectable="false"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/MONTO"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:background="@drawable/borde"
            android:text="monto"
            android:textAlignment="center"
            android:textAllCaps="false"
            tools:layout_height="match_parent"
            tools:ignore="HardcodedText"
            android:inputType="" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="#02A8F3">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="#Consulta"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Detalle"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fecha"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Monto"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pendiente"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Estado"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Saldar"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Abonar"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

    </TableRow>
    <ListView
        android:id="@+id/lvConsultas"
        android:layout_width="374dp"
        android:layout_height="391dp"
         >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:ignore="UselessLeaf">


        </RelativeLayout>

        <TableRow
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="2"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="#3caee2"
            android:text="Anular"
            tools:ignore="ButtonStyle,HardcodedText,ObsoleteLayoutParam" />

        <Button
            android:id="@+id/button3"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3caee2"
            android:text="Modificar"
            tools:ignore="ButtonStyle,HardcodedText" />

    </TableRow>
    </LinearLayout>
</LinearLayout>
