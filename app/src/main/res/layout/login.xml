<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/login_fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top">


    </RelativeLayout>
    </ScrollView>

    <EditText
android:layout_width="300dp"
android:layout_height="wrap_content"
android:id="@+id/etUserLogin"
android:hint="Nombre de usuario"
android:textAlignment="center"
android:layout_weight="1"
android:padding="10dp"
android:ems="10"

android:layout_gravity="center_vertical"
    android:layout_above="@+id/etPassLogin"
    android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="4dp"
        android:elevation="5dp"
        android:maxLines="1"
        android:inputType="textPersonName" />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:hint="Password"
    android:textAlignment="center"
    android:textSize="17dp"

    android:padding="10dp"
    android:ems="10"
    android:id="@+id/etPassLogin"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="2dp"
        android:elevation="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VesiÃ³n: 0.1.1"
        android:id="@+id/tvVersion"
        android:textColor="#606060"
        android:layout_gravity="center_vertical|bottom"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powered by: LinksDominicana"
        android:id="@+id/textView"
        android:textColor="#606060"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar"

        android:id="@+id/btnLogin"
        android:onClick="onButtonClick"
        style="@style/btnLogin"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_below="@+id/etPassLogin"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        android:foreground="#ff5500"
        android:foregroundGravity="fill_vertical"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:textStyle="bold" />

    <ProgressBar
android:id="@+id/pbHeaderProgress"
android:layout_width="match_parent"
android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_above="@+id/tvVersion"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp">
</ProgressBar>

