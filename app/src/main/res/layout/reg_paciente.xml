<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos Personales"
        android:textSize="30dp"

        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:gravity="center"

       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="Nombre"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="textPersonName"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tvSexo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="Sexo"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spSexo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1" />


            <TextView
                android:id="@+id/tvEdad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="Edad"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etEdad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="numberSigned"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tvResponsable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="Tutor"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etResponsable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="textPersonName"
                android:textSize="25dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tvdireccion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="Dirección"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="Teléfono"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tvEstadoCivil"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="Estado Civil"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etEstadoCivil"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="25dp" />


        </TableRow>


        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          android:layout_margin="@dimen/fab_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Datos de Trabajo"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="normal|bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tvOcupacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="Ocupacion"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etOcupacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tvDireccionOcu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"

                android:text="Dirección"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etDireccionOcu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tvTelefonoOcu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|right"

                android:text="Teléfono"
                android:textSize="25dp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etTelefonoOcu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:ems="10"
                android:inputType="phone"
                android:textSize="20dp" />
        </TableRow>
</LinearLayout>
</LinearLayout>
